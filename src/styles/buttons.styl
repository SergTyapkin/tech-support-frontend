@require 'constants.styl'
@require 'fonts.styl'

button()
    font-small()
    text-align center
    padding 10px
    border-radius 3px
    border empColor2_2 solid 1px
    text-shadow none
    transition all 0.2s ease
    cursor pointer
    box-sizing border-box
    background mix(empColor2_3, transparent)
    box-shadow 5px 5px 10px colorShadow
    @media ({mobile})
        box-shadow none

    &:hover
        border-color empColor2_1
        box-shadow 5px 5px 15px colorShadowDark


button-submit()
    button()
    font-small()
    background blocksBgColor
    border-color empColor1_3
    &:hover
        border-color empColor1_2
