@require '../styles/constants.styl'
@require '../styles/fonts.styl'


centered()
    margin-left auto
    margin-right auto
    width 100%

block()
    font-medium()
    background blocksBgColor
    border-radius 7px
    //backdrop-filter blur(10px) brightness(3)
    transition all 0.3s ease
    padding 30px

block-dark-bg()
    background blocksBgColorDark
    block()
    //backdrop-filter blur(10px)

block-clickable()
    block()
    cursor pointer
    &:hover
        background blocksBgColorHover

block-undercolor-container()
    position relative
    .background
        content ""
        position absolute
        width 100%
        height 100%
        top -20px
        left 20px
        background "repeating-linear-gradient(-45deg, %s 0px, %s 40px, transparent 40px, transparent 100px)" % (empColor1_1 empColor1_1)
        z-index -1
