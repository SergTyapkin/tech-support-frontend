@require '../styles/constants.styl'
@require '../styles/buttons.styl'
@require '../styles/fonts.styl'
@require '../styles/utils.styl'


input()
    all unset
    width 100%
    color textColor1
    box-sizing border-box
    padding 10px
    font-medium()
    transition all 0.2s ease
    cursor text
    background colorShadowLight-x
    border-radius 5px 5px 0 0
    position relative
    & + .underline
        display block
        height 1px
        width 100%
        transition all 0.3s ease
        background linear-gradient(90deg, transparent 0%, empColor1_1 35%, empColor1_1 65%, transparent 100%)
    &[readonly] + .underline
    &[submit] + .underline
        display none
    &:not([readonly]):not([type=submit]):not([type=range]):focus
        background colorShadowDark
        & + .underline
            background-size 250%
    &.error + .underline
        filter invert(1) // to red
    &.success + .underline
        filter hue-rotate(300deg) // to green

    &[readonly]
        cursor default
        border none
        border-radius 5px
        background colorShadowLight-x
    @media ({mobile})
        border-right-width 10px
        border-left-width 10px

textarea()
    input()
    background colorShadowDark
    border-radius 3px
    border transparent 1px solid
    transition border 0.2s ease
    resize vertical
    white-space pre-line
    &:not([readonly]):focus
        border empColor2_1 1px solid

form-no-bg()
    block()
    padding 0
    margin-top 0
    margin-bottom 0
    background none

form()
    block()
    max-width 460px
    centered()
    > div // containers
        margin 30px 0
    > div:last-child
        margin-bottom 0
    > div:first-child
        margin-top 0

    input[type=submit]
        button-submit()

    &.error
    &.success
        .form-status
            opacity 1
    &.error
    & .error
        color colorNo
        border-color colorNo
    &.success
    & .success
        color colorYes
        border-color colorYes


    &.disabled
        input()
            cursor default
            user-select none
            filter saturate(0)

@media ({mobile})
    .form
        padding-left 10px
        padding-right 10px
